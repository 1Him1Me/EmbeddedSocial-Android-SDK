<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:background="?attr/sp_topicFeedBackground"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/sp_padding_base"
			android:layout_marginLeft="@dimen/sp_padding_large"
			android:layout_marginRight="@dimen/sp_padding_large"
			android:layout_marginTop="@dimen/sp_padding_large"
			app:cardBackgroundColor="?attr/sp_cardBackground"
			>

			<LinearLayout
				android:id="@+id/sp_uploadPhotoLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/sp_buttonBackground"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:padding="@dimen/sp_padding_large"
				>

				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/sp_profileImage"
					android:layout_width="@dimen/sp_user_icon_size"
					android:layout_height="@dimen/sp_user_icon_size"
					android:src="?attr/sp_userNoPhotoIcon"
					app:border_width="0px"
					/>

				<TextView
					style="@style/SocialPlusSdkTextSubhead"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/sp_padding_large"
					android:singleLine="true"
					android:text="@string/sp_action_upload_photo"
					/>

			</LinearLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/sp_padding_large"
			android:layout_marginLeft="@dimen/sp_padding_large"
			android:layout_marginRight="@dimen/sp_padding_large"
			android:layout_marginTop="@dimen/sp_padding_base"
			app:cardBackgroundColor="?attr/sp_cardBackground"
			>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingBottom="@dimen/sp_profile_row_margin"
				android:paddingLeft="@dimen/sp_padding_large"
				android:paddingRight="@dimen/sp_padding_large"
				android:paddingTop="@dimen/sp_padding_large"
				>

				<TextView
					style="@style/SocialPlusSdkTextHead"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/sp_padding_large"
					android:gravity="center_vertical"
					android:text="@string/sp_account_info_header"
					/>

				<com.microsoft.socialplus.ui.view.TextInput
					android:id="@+id/sp_firstNameLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/sp_padding_small"
					>

					<EditText
						android:id="@+id/sp_firstName"
						style="@style/SocialPlusSdkEditTextStyle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="@string/sp_hint_first_name"
						android:inputType="textPersonName|textCapWords"
						android:maxLength="16"
						/>

				</com.microsoft.socialplus.ui.view.TextInput>

				<com.microsoft.socialplus.ui.view.TextInput
					android:id="@+id/sp_lastNameLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/sp_padding_small"
					>

					<EditText
						android:id="@+id/sp_lastName"
						style="@style/SocialPlusSdkEditTextStyle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="@string/sp_hint_last_name"
						android:inputType="textPersonName|textCapWords"
						android:maxLength="16"
						/>

				</com.microsoft.socialplus.ui.view.TextInput>

				<com.microsoft.socialplus.ui.view.TextInput
					android:id="@+id/sp_bioLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/sp_padding_small"
					>

					<EditText
						style="@style/SocialPlusSdkEditTextStyle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="@string/sp_hint_bio"
						android:inputType="textMultiLine"
						/>

				</com.microsoft.socialplus.ui.view.TextInput>

				<TextView
					style="@style/SocialPlusSdkTextSubhead.Green"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/sp_padding_large"
					android:layout_marginTop="@dimen/sp_padding_large"
					android:text="@string/sp_privacy_header"
					/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginRight="@dimen/sp_profile_margin_text"
						android:layout_toLeftOf="@+id/sp_privacySwitch"
						android:paddingBottom="@dimen/sp_padding_small"
						android:text="@string/sp_privacy_description"
						/>

					<android.support.v7.widget.SwitchCompat
						android:id="@+id/sp_privacySwitch"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						/>

				</RelativeLayout>

			</LinearLayout>

		</android.support.v7.widget.CardView>

	</LinearLayout>
</ScrollView>