<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/sp_profileLayout"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingRight="@dimen/sp_card_list_padding_hor"
	android:paddingLeft="@dimen/sp_card_list_padding_hor"
	android:paddingTop="@dimen/sp_card_list_padding_ver"
	android:paddingBottom="@dimen/sp_card_list_padding_ver"
	>

	<android.support.v7.widget.CardView
		style="@style/EmbeddedSocialSdkCardViewStyle"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>

		<FrameLayout
			android:id="@+id/sp_cardContent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:foreground="?attr/sp_buttonBackground"
			>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				tools:ignore="UselessParent"
				>

				<FrameLayout
					android:id="@+id/sp_photoContent"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					/>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/sp_padding_base"
					android:layout_marginLeft="@dimen/sp_padding_base"
					android:layout_marginRight="@dimen/sp_padding_base"
					android:layout_marginTop="@dimen/sp_padding_large"
					android:orientation="horizontal"
					>

					<TextView
						android:id="@+id/sp_followersCount"
						style="@style/EmbeddedSocialSdkButton"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						/>

					<TextView
						android:id="@+id/sp_followingCount"
						style="@style/EmbeddedSocialSdkButton"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						/>

					<View
						android:layout_width="0px"
						android:layout_height="1dp"
						android:layout_weight="1"
						/>

					<TextView
						android:id="@+id/sp_editProfile"
						style="@style/EmbeddedSocialSdkButton"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/sp_button_edit_profile"
						/>

					<TextView
						android:id="@+id/sp_followingStatus"
						style="@style/EmbeddedSocialSdkBoundedButton.Small"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="10dp"
						/>

				</LinearLayout>


			</LinearLayout>

		</FrameLayout>


	</android.support.v7.widget.CardView>
</FrameLayout>
