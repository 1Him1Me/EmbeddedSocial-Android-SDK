<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/sp_reply_root"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	>

	<android.widget.Space
		android:id="@+id/sp_leftBorder"
		android:layout_width="48dp"
		android:layout_height="@dimen/sp_user_icon_size"
		/>

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/sp_profileImage"
		android:layout_width="@dimen/sp_user_icon_size"
		android:layout_height="@dimen/sp_user_icon_size"
		android:layout_marginBottom="@dimen/sp_padding_large"
		android:layout_marginRight="@dimen/sp_padding_large"
		android:layout_marginTop="@dimen/sp_padding_large"
		android:layout_toRightOf="@id/sp_leftBorder"
		android:scaleType="centerCrop"
		android:src="?attr/sp_userNoPhotoIcon"
		android:background="?attr/sp_photoPlaceholder"
		app:border_width="0px"
		/>

	<TextView
		android:id="@+id/sp_profileName"
		style="@style/SocialPlusSdkTextSubhead"
		android:textStyle="bold"

		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/sp_profileImage"
		android:layout_marginRight="@dimen/sp_padding_large"
		android:layout_toRightOf="@id/sp_profileImage"
		android:singleLine="true"
		/>

	<LinearLayout
		android:id="@+id/sp_menuGroup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:layout_alignParentRight="true"
		>

		<TextView
			android:id="@+id/sp_postTime"
			style="@style/SocialPlusSdkTextBody2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/sp_padding_base"
			android:singleLine="true"
			/>

		<ImageView
			android:id="@+id/sp_contextMenuButton"
			android:layout_width="@dimen/sp_button_base_size"
			android:layout_height="72dp"
			android:background="?attr/sp_buttonBackground"
			android:clickable="true"
			android:scaleType="center"
			android:src="?attr/sp_contextMenuIcon"
			/>

	</LinearLayout>

	<FrameLayout
		android:id="@+id/sp_userHeaderButton"
		android:layout_width="@dimen/sp_button_base_size"
		android:layout_height="72dp"
		android:clickable="true"
		android:foreground="?attr/sp_buttonBackground"
		android:layout_toRightOf="@id/sp_leftBorder"
		/>

	<TextView
		android:id="@+id/sp_replyText"
		style="@style/SocialPlusSdkTextSubhead"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/sp_profileName"
		android:layout_marginRight="@dimen/sp_padding_large"
		android:layout_toRightOf="@id/sp_profileImage"
		android:layout_toLeftOf="@id/sp_menuGroup"
		android:autoLink="web"
		/>

	<ImageView
		android:id="@+id/sp_likeButton"
		style="?android:attr/borderlessButtonStyle"
		android:layout_width="@dimen/sp_button_base_size"
		android:layout_height="@dimen/sp_button_base_size"
		android:layout_toRightOf="@id/sp_leftBorder"
		android:layout_below="@id/sp_replyText"
		android:layout_marginTop="6dp"
		android:background="?attr/sp_buttonBackground"
		android:clickable="true"
		android:scaleType="center"
		android:src="@drawable/sp_ic_like_normal"
		/>

	<TextView
		android:id="@+id/sp_replyLikesCountButton"
		style="@style/SocialPlusSdkTextCaption.Green"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/sp_button_base_size"
		android:layout_below="@id/sp_replyText"
		android:layout_marginTop="@dimen/sp_padding_small"
		android:layout_marginRight="@dimen/sp_padding_small"
		android:layout_alignParentRight="true"
		android:drawableLeft="@drawable/sp_ic_like_green"
		android:drawablePadding="@dimen/sp_padding_small"
		android:background="?attr/sp_buttonBackground"
		android:clickable="true"
		android:gravity="center_vertical"
		/>

	<View
		android:id="@+id/sp_dividerLayoutBottom"
		style="@style/SocialPlusSdkDivider"
		android:layout_below="@id/sp_replyLikesCountButton"
		android:layout_marginTop="@dimen/sp_padding_base"
		android:layout_toRightOf="@id/sp_leftBorder"/>

</RelativeLayout>