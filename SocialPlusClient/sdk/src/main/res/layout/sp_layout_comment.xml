<RelativeLayout
	android:id="@+id/sp_comment_root"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

	<android.widget.Space
		android:id="@+id/sp_leftBorder"
		android:layout_width="@dimen/sp_padding_xlarge"
		android:layout_height="@dimen/sp_user_icon_size"
		/>

	<include
		layout="@layout/sp_view_user_header"/>

	<include
		layout="@layout/sp_view_comment"/>

	<View
		android:id="@+id/sp_dividerLayoutBottom"
		style="@style/SocialPlusSdkDivider"
		android:layout_below="@id/sp_buttonsLayout"
		android:layout_marginTop="@dimen/sp_padding_base"/>

</RelativeLayout>