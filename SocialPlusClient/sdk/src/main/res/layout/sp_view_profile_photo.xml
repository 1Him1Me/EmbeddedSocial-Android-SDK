<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/sp_photo"
		android:layout_width="@dimen/sp_user_pic_large_size"
		android:layout_height="@dimen/sp_user_pic_large_size"
		android:layout_marginLeft="@dimen/sp_padding_large"
		android:layout_marginRight="@dimen/sp_padding_xlarge"
		android:layout_marginTop="@dimen/sp_padding_large"
		android:background="?attr/sp_photoPlaceholder"
		android:scaleType="centerCrop"
		/>

	<TextView
		android:id="@+id/sp_fullName"
		style="@style/SocialPlusSdkTextHead"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/sp_padding_small"
		android:layout_marginRight="@dimen/sp_padding_base"
		android:layout_marginTop="@dimen/sp_padding_large"
		android:layout_toRightOf="@id/sp_photo"
		/>

	<TextView
		android:id="@+id/sp_bio"
		style="@style/SocialPlusSdkTextSubhead"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/sp_fullName"
		android:layout_marginRight="@dimen/sp_padding_base"
		android:layout_toRightOf="@id/sp_photo"
		/>

</RelativeLayout>