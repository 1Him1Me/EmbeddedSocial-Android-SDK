<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="match_parent"
android:layout_width="match_parent"
android:fillViewport="true">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:orientation="vertical"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:gravity="center_horizontal">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true">


			<ProgressBar
				android:id="@+id/sp_progress"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_gravity="center_horizontal|top"
				android:layout_marginTop="15dp"
				android:indeterminateTint="#C6FF00"
				android:indeterminateTintMode="src_in"
				android:visibility="gone"
				tools:ignore="UnusedAttribute"
				/>

			<LinearLayout
				android:id="@+id/sp_buttons"
				android:orientation="vertical"
				android:layout_marginTop="40dp"
				style="@style/SocialPlusSdkSignInButtonsLayout"
				android:layout_gravity="center_horizontal"
				>

				<LinearLayout
					android:id="@+id/sp_signInGoogle"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/sp_sign_in_button_height"
					android:background="@drawable/sp_google_button_background"
					style="@style/SocialPlusSdkSignInButton">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/sp_google_logo"
						style="@style/SocialPlusSignInImage"
						/>

					<include layout="@layout/sp_vertical_bar"/>

					<TextView
						android:text="@string/sp_google"
						style="@style/SocialPlusSignInText"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/sp_signInFacebook"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/sp_sign_in_button_height"
					android:background="@drawable/sp_facebook_button_background"
					style="@style/SocialPlusSdkSignInButton">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/sp_facebook_logo"
						android:layout_margin="4dp"
						/>

					<include layout="@layout/sp_vertical_bar"/>

					<TextView
						android:text="@string/sp_facebook"
						style="@style/SocialPlusSignInText"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/sp_signInMicrosoft"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/sp_sign_in_button_height"
					android:background="@drawable/sp_microsoft_button_background"
					style="@style/SocialPlusSdkSignInButton">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/sp_microsoft_logo"
						android:layout_margin="4dp"
						/>

					<include layout="@layout/sp_vertical_bar"/>

					<TextView
						android:text="@string/sp_microsoft"
						style="@style/SocialPlusSignInText"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/sp_signInTwitter"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/sp_sign_in_button_height"
					android:background="@drawable/sp_twitter_button_background"
					style="@style/SocialPlusSdkSignInButton">
					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@drawable/sp_twitter_logo"
						android:layout_margin="4dp"
						/>

					<include layout="@layout/sp_vertical_bar"/>

					<TextView
						android:text="@string/sp_twitter"
						style="@style/SocialPlusSignInText"/>
				</LinearLayout>
			</LinearLayout>
		</FrameLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Powered by Microsoft Embedded Social"
				android:textSize="18dp"
				android:layout_gravity="center"
				android:paddingBottom="90dp"
				/>

			<TextView
				android:id="@+id/sp_policyText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14dp"
				android:text="@string/sp_additional_app_terms"
				android:layout_marginBottom="20dp"
				/>
		</LinearLayout>
	</RelativeLayout>
</ScrollView>