<merge xmlns:android="http://schemas.android.com/apk/res/android"
	   xmlns:app="http://schemas.android.com/apk/res-auto"
	   android:layout_width="match_parent"
	   android:layout_height="match_parent"
	>

	<include layout="@layout/sp_view_user_header"/>

	<com.microsoft.socialplus.ui.view.AspectRatioImageView
		android:id="@+id/sp_coverImage"
		android:layout_width="match_parent"
		android:layout_height="@dimen/sp_card_cover_image_height"
		android:layout_below="@id/sp_profileImage"
		android:layout_marginBottom="@dimen/sp_padding_large"
		android:background="?attr/sp_topicCoverBackground"
		android:scaleType="centerCrop"
		app:sp_aspectRatio="0.66"
		/>

	<FrameLayout
		android:id="@+id/sp_coverButton"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignBottom="@id/sp_coverImage"
		android:layout_alignTop="@id/sp_coverImage"
		android:foreground="?attr/sp_buttonBackground"
		android:clickable="true"
		android:visibility="gone"
		/>

	<TextView
		android:id="@+id/sp_postTitle"
		style="@style/SocialPlusSdkTextSubhead"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/sp_coverImage"
		android:layout_marginRight="@dimen/sp_padding_large"
		android:layout_toRightOf="@id/sp_leftBorder"
		android:singleLine="true"
		android:textStyle="bold"
		android:autoLink="web"
		/>

	<TextView
		android:id="@+id/sp_postBody"
		style="@style/SocialPlusSdkTextSubhead"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/sp_postTitle"
		android:layout_marginRight="@dimen/sp_padding_large"
		android:layout_marginTop="@dimen/sp_padding_base"
		android:layout_toRightOf="@id/sp_leftBorder"
		/>

	<LinearLayout
		android:id="@+id/sp_postAppLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/sp_postBody"
		android:layout_marginRight="@dimen/sp_padding_large"
		android:layout_marginTop="@dimen/sp_padding_xlarge"
		android:layout_toRightOf="@id/sp_leftBorder"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		>

		<ImageView
			android:id="@+id/sp_postAppIcon"
			android:layout_width="@dimen/sp_button_icon_size"
			android:layout_height="@dimen/sp_button_icon_size"
			android:layout_marginRight="@dimen/sp_padding_large"
			android:background="@color/sp_image_holder"
			android:scaleType="centerCrop"
			/>

		<TextView
			android:id="@+id/sp_postAppName"
			style="@style/SocialPlusSdkTextSubhead"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			/>

	</LinearLayout>

	<View
		android:id="@+id/sp_dividerLayoutTop"
		style="@style/SocialPlusSdkDivider"
		android:layout_below="@id/sp_postAppLayout"
		android:layout_marginBottom="@dimen/sp_padding_base"
		android:layout_marginTop="@dimen/sp_padding_xlarge"/>

	<FrameLayout
		android:id="@+id/sp_contentButton"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clickable="true"
		android:foreground="?attr/sp_buttonBackground"
		android:layout_below="@id/sp_profileImage"
		android:layout_above="@+id/sp_buttonsLayout"
		android:layout_alignTop="@id/sp_coverImage"
		android:layout_alignBottom="@id/sp_dividerLayoutTop"
		/>

	<RelativeLayout
		android:id="@+id/sp_buttonsLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/sp_dividerLayoutTop"
		android:layout_marginLeft="@dimen/sp_compensate_drawable_size"
		android:layout_toRightOf="@id/sp_leftBorder"
		>

		<ImageView
			android:id="@+id/sp_likeButton"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="@dimen/sp_button_base_size"
			android:layout_height="@dimen/sp_button_base_size"
			android:layout_marginTop="2dp"
			android:background="?attr/sp_buttonBackground"
			android:clickable="true"
			android:scaleType="center"
			android:src="@drawable/sp_ic_like_normal"/>

		<ImageView
			android:id="@+id/sp_commentButton"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="@dimen/sp_button_base_size"
			android:layout_height="@dimen/sp_button_base_size"
			android:layout_marginBottom="@dimen/sp_padding_small"
			android:layout_marginTop="2dp"
			android:layout_toRightOf="@id/sp_likeButton"
			android:background="?attr/sp_buttonBackground"
			android:clickable="true"
			android:scaleType="center"
			android:src="@drawable/sp_ic_comment"
			/>

		<ImageView
			android:id="@+id/sp_pinButton"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="@dimen/sp_button_base_size"
			android:layout_height="@dimen/sp_button_base_size"
			android:layout_marginTop="2dp"
			android:layout_toRightOf="@id/sp_commentButton"
			android:background="?attr/sp_buttonBackground"
			android:clickable="true"
			android:scaleType="center"
			android:src="@drawable/sp_ic_pin_normal"/>

		<TextView
			android:id="@+id/sp_postCommentsCountButton"
			style="@style/SocialPlusSdkTextCaption.Green"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/sp_button_base_size"
			android:layout_alignParentRight="true"
			android:layout_marginRight="@dimen/sp_padding_small"
			android:background="?attr/sp_buttonBackground"
			android:clickable="true"
			android:drawableLeft="@drawable/sp_ic_comment_green"
			android:drawablePadding="@dimen/sp_counter_drawable_padding"
			android:gravity="center_vertical"
			/>

		<TextView
			android:id="@+id/sp_postLikesCountButton"
			style="@style/SocialPlusSdkTextCaption.Green"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/sp_button_base_size"
			android:layout_alignBaseline="@id/sp_postCommentsCountButton"
			android:layout_toLeftOf="@id/sp_postCommentsCountButton"
			android:background="?attr/sp_buttonBackground"
			android:clickable="true"
			android:drawableLeft="@drawable/sp_ic_like_green"
			android:drawablePadding="@dimen/sp_counter_drawable_padding"
			android:gravity="center_vertical"
			/>

	</RelativeLayout>

	<View
		android:id="@+id/sp_dividerLayoutBottom"
		style="@style/SocialPlusSdkDivider"
		android:layout_below="@id/sp_buttonsLayout"
		android:layout_marginTop="@dimen/sp_padding_base"
		android:visibility="gone"/>

</merge>