<RelativeLayout
	android:id="@+id/sp_comment_root"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/sp_profileImage"
		android:layout_width="@dimen/sp_user_icon_size"
		android:layout_height="@dimen/sp_user_icon_size"
		android:layout_marginBottom="@dimen/sp_padding_large"
		android:layout_marginLeft="@dimen/sp_padding_xlarge"
		android:layout_marginRight="@dimen/sp_padding_large"
		android:layout_marginTop="@dimen/sp_padding_large"
		android:background="?attr/sp_photoPlaceholder"
		android:scaleType="centerCrop"
		android:src="?attr/sp_userNoPhotoIcon"
		app:border_width="0px"
		/>

	<FrameLayout
		android:id="@+id/sp_userHeaderButton"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:layout_marginLeft="@dimen/sp_padding_large"
		android:layout_marginTop="@dimen/sp_padding_base"
		android:clickable="true"
		android:foreground="?attr/sp_buttonBackground"
		/>

	<TextView
		android:id="@+id/sp_profileName"
		style="@style/SocialPlusSdkTextSubhead"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/sp_profileImage"
		android:layout_marginRight="@dimen/sp_padding_large"
		android:layout_toRightOf="@id/sp_profileImage"
		android:singleLine="true"
		android:textStyle="bold"
		/>

	<LinearLayout
		android:id="@+id/sp_menuGroup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		>

		<TextView
			android:id="@+id/sp_postTime"
			style="@style/SocialPlusSdkTextBody2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/sp_padding_base"
			android:singleLine="true"
			/>

		<ImageView
			android:id="@+id/sp_contextMenuButton"
			android:layout_width="@dimen/sp_button_base_size"
			android:layout_height="52dp"
			android:background="?attr/sp_buttonBackground"
			android:clickable="true"
			android:scaleType="center"
			android:src="?attr/sp_contextMenuIcon"
			/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/sp_comment_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_below="@id/sp_profileImage"
		android:layout_toRightOf="@id/sp_profileImage"
		>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/sp_coverImage"
			>
			<com.microsoft.socialplus.ui.view.AspectRatioImageView
				android:id="@+id/sp_coverImage"
				android:layout_width="match_parent"
				android:layout_height="@dimen/sp_card_cover_image_height"
				android:layout_marginBottom="@dimen/sp_padding_large"
				android:background="?attr/sp_topicCoverBackground"
				android:scaleType="centerCrop"
				android:layout_marginRight="10dp"
				/>

			<FrameLayout
				android:id="@+id/sp_coverButton"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignBottom="@id/sp_coverImage"
				android:layout_alignTop="@id/sp_coverImage"
				android:foreground="?attr/sp_buttonBackground"
				android:clickable="true"
				/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/sp_coverImage"
			>
			<TextView
				android:id="@+id/sp_commentText"
				style="@style/SocialPlusSdkTextSubhead"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="4dp"
				android:layout_marginRight="@dimen/sp_padding_large"
				android:paddingRight="@dimen/sp_padding_large"
				android:autoLink="web"
				/>

			<FrameLayout
				android:id="@+id/sp_contentButton"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignBottom="@id/sp_commentText"
				android:layout_alignLeft="@id/sp_commentText"
				android:layout_alignTop="@id/sp_commentText"
				android:clickable="true"
				android:foreground="?attr/sp_buttonBackground"
				/>
		</RelativeLayout>
		<include
			layout="@layout/sp_view_comment_buttons"/>
	</LinearLayout>

	<View
		android:id="@+id/sp_dividerLayoutBottom"
		style="@style/SocialPlusSdkDivider"
		android:layout_below="@id/sp_comment_content"
		android:layout_marginTop="@dimen/sp_padding_base"
		/>
</RelativeLayout>