<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/AlexText"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<EditText
		android:id="@+id/sp_noteText"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="@dimen/sp_padding_large"
		android:inputType="textMultiLine|textCapSentences"
		/>

	<FrameLayout
	android:id="@+id/sp_bottomBarAlex"
	android:background="?attr/sp_contentBackground"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:visibility="gone"
	tools:ignore="MissingPrefix"
		>

	<View
		style="@style/SocialPlusSdkDivider"
		android:layout_gravity="top"/>

	<Button
		android:id="@+id/sp_doneButtonAlex"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/sp_menu_done"
		android:layout_gravity="right"
		style="@style/SocialPlusSdkBottomButton"
		/>

	</FrameLayout>
</LinearLayout>
