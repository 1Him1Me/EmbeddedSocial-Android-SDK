<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/sp_navigationProfile"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="?attr/sp_navigationItemBackground"
	android:paddingBottom="@dimen/sp_padding_base"
	android:paddingTop="@dimen/sp_padding_base"
	android:gravity="center_vertical"
	android:paddingLeft="@dimen/sp_navigation_hor_padding"
	android:paddingRight="@dimen/sp_navigation_hor_padding"
	>

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/sp_photo"
		android:layout_width="@dimen/sp_user_icon_size"
		android:layout_height="@dimen/sp_user_icon_size"
		android:scaleType="centerCrop"
		android:layout_marginRight="@dimen/sp_padding_large"
		android:src="@drawable/sp_user_no_pic_white"
		android:background="?attr/sp_photoPlaceholder"
		/>

	<TextView
		android:id="@+id/sp_fullName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:text="@string/sp_sign_in"
		android:textColor="@android:color/white"
		android:textSize="15dp"
		/>

</LinearLayout>
