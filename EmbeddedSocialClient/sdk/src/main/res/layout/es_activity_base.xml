<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<android.support.v7.widget.Toolbar
		android:id="@+id/es_toolbar"
		style="?attr/es_toolbarStyle"
		android:background="@color/es_toolbar_background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="?attr/actionBarSize"
		/>

	<FrameLayout
		android:id="@+id/es_content"
		android:layout_width="match_parent"
		android:layout_height="0px"
		android:layout_weight="1"
		android:background="?attr/es_contentBackground"
		/>

	<FrameLayout
		android:id="@+id/es_bottomBar"
		android:background="?attr/es_contentBackground"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		tools:ignore="MissingPrefix"
		>

		<View
			style="@style/EmbeddedSocialSdkDivider"
			android:layout_gravity="top"/>

		<Button
			android:id="@+id/es_doneButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/es_menu_done"
			android:layout_gravity="right"
			style="@style/EmbeddedSocialSdkBottomButton"
			/>

	</FrameLayout>

</LinearLayout>